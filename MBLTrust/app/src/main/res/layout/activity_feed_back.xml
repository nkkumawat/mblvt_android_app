<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_feed_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.sonu.mbltrust.FeedBack"
    android:background="@color/common_google_signin_btn_text_dark_default">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/toolbar2" />

    <TextView
        android:text="MBLVTrust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toolbar2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/textView10"
        android:textColor="@color/cardview_light_background"
        android:textSize="20sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText4"
        android:textAlignment="center"
        android:textColorHighlight="@android:color/background_light"
        android:hint="Message"
        android:background="@drawable/background"
        android:layout_marginBottom="44dp"
        android:layout_above="@+id/send"
        android:layout_alignParentStart="true"
        android:textColor="?android:attr/colorForegroundInverse"
        android:textColorHint="@color/cardview_light_background"
        android:textColorLink="?android:attr/colorForegroundInverse" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText3"
        android:textAlignment="center"
        android:hint="Email"
        android:background="@drawable/background"
        android:layout_above="@+id/editText4"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp"
        android:textColorHint="@color/cardview_light_background"
        android:textColor="@color/cardview_light_background"
        android:textColorLink="?android:attr/colorForegroundInverse"
        android:textColorHighlight="@color/cardview_light_background" />

    <EditText
        android:layout_width="match_parent"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText"
        android:textAlignment="center"
        android:hint="Name"
        android:background="@drawable/background"
        android:layout_height="35dp"
        android:autoText="true"
        android:fontFamily="sans-serif"
        android:rotationX="0"
        android:soundEffectsEnabled="false"
        tools:shadowRadius="20"
        android:shadowRadius="20"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/editText3"
        android:layout_alignParentStart="true"
        android:textColor="@color/cardview_light_background"
        android:textColorHint="@color/cardview_light_background"
        android:textColorLink="?android:attr/colorForegroundInverse" />

    <ImageView
        android:layout_height="40dp"
        app:srcCompat="@drawable/logosbk"
        android:id="@+id/imageView3"
        android:layout_width="40dp"
        android:layout_marginLeft="40dp"
        android:layout_alignTop="@+id/textView12"
        android:layout_toStartOf="@+id/textView12"
        android:layout_marginBottom="30dp" />

    <TextView
        android:text="SBK Computers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:id="@+id/textView12"
        android:layout_marginBottom="29dp"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/send"
        android:textColor="@color/cardview_light_background"
        android:textSize="24sp"
        android:background="@drawable/background"
        android:layout_marginBottom="40dp"
        android:textColorHint="@color/cardview_light_background"
        android:layout_above="@+id/imageView3"
        android:layout_alignParentStart="true" />

</RelativeLayout>
