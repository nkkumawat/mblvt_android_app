<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rsb="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_gravity="bottom">


         <RelativeLayout
             android:id="@+id/demo3"
             android:layout_width="wrap_content"
             android:layout_gravity="right"
             android:layout_marginRight="@dimen/margin_right"
             android:layout_marginBottom="10dp"
             android:layout_height="wrap_content">
             <TextView
                 android:id="@+id/demotext3"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Today`s Thought"
                 android:background="@drawable/rounded_edge"
                 android:padding="12dp"
                 android:layout_centerVertical="true"/>

             <ImageView
                 android:gravity="bottom"
                 android:layout_toRightOf="@+id/demotext3"
                 android:layout_marginLeft="20dp"
                 android:src="?attr/actionModeCopyDrawable"
                 android:layout_width="35dp"
                 android:layout_height="35dp" />
         </RelativeLayout>

         <RelativeLayout
             android:id="@+id/demo4"
             android:layout_width="wrap_content"
             android:layout_gravity="right"
             android:layout_marginRight="@dimen/margin_right"
             android:layout_marginBottom="10dp"
             android:layout_height="wrap_content">
             <TextView
                 android:id="@+id/demotext4"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Gallery"
                 android:background="@drawable/rounded_edge"
                 android:padding="12dp"
                 android:layout_centerVertical="true"/>

             <ImageView
                 android:gravity="bottom"
                 android:layout_toRightOf="@+id/demotext4"
                 android:layout_marginLeft="20dp"
                 android:src="@android:drawable/ic_dialog_dialer"
                 android:layout_width="35dp"
                 android:layout_height="35dp" />
         </RelativeLayout>

         <RelativeLayout
             android:id="@+id/demo5"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="right"
             android:layout_marginRight="@dimen/margin_right"
             android:layout_marginBottom="10dp">

             <TextView
                 android:id="@+id/demotext5"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Share Views"
                 android:background="@drawable/rounded_edge"
                 android:padding="12dp"
                 android:layout_centerVertical="true"/>

             <ImageView
                 android:gravity="bottom"
                 android:layout_toRightOf="@+id/demotext5"
                 android:layout_marginLeft="20dp"
                 android:src="@android:drawable/stat_notify_chat"
                 android:layout_width="35dp"
                 android:layout_height="35dp" />
         </RelativeLayout>

         <RelativeLayout
             android:id="@+id/cross"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_marginBottom="10dp">

             <ImageView
                 android:layout_alignParentRight="true"
                 android:gravity="bottom"
                 android:layout_marginRight="10dp"
                 android:src="@android:drawable/ic_menu_close_clear_cancel"
                 android:layout_height="50dp"
                 android:layout_width="50dp"
                 android:layout_marginBottom="8dp" />
         </RelativeLayout>


     </LinearLayout>





    </LinearLayout>